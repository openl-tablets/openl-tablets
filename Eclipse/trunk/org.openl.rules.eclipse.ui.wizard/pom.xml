<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.openl.rules</groupId>
    <artifactId>org.openl.rules.eclipse-pom</artifactId>
    <version>5.10.5-SNAPSHOT</version>
    <relativePath>../org.openl.rules.eclipse-pom</relativePath>
  </parent>

  <groupId>org.openl.rules</groupId>
  <artifactId>org.openl.rules.eclipse.ui.wizard</artifactId>
  <packaging>jar</packaging>
  <name>OpenL - Eclipse - Rules - Eclipse UI Wizard</name>
  <description>OpenL Rules Eclipse wizards</description>
  <url>http://openl-tablets.sf.net/</url>

  <build>
    <plugins>
	   <!-- Remove the folders: org.openl.tablets.tutorial*, org.openl.rules.examples*, org.openl.tablets.deploy*, 
	   org.openl.rules.webstudio* to avoid conflicts with old version files.
	   -->
		<plugin>
			<artifactId>maven-clean-plugin</artifactId>
			<configuration>
			  <filesets>
				<fileset>
					<directory>templates</directory>

				  <includes>
					<include>org.openl.tablets.tutorial*</include>
					<include>org.openl.rules.examples*</include>
					<include>org.openl.tablets.deploy*</include>
					<include>org.openl.rules.webstudio*</include>
				</includes>
				  <followSymlinks>false</followSymlinks>
				</fileset>
			  </filesets>
			</configuration>
		</plugin>


      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-source-plugin</artifactId>
        <configuration>
          <excludeResources>true</excludeResources>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>unpack-webstudio-template</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>unpack</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>org.openl.rules</groupId>
                  <artifactId>org.openl.rules.webstudio</artifactId>
                  <version>${project.version}</version>
                  <type>zip</type>
                  <classifier>template</classifier>
                  <outputDirectory>templates/org.openl.rules.webstudio</outputDirectory>
                </artifactItem>
              </artifactItems>
            </configuration>
          </execution>

          <execution>
            <id>unpack-tutorials</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>unpack</goal>
            </goals>
            <configuration>
              <includes>org.openl.tablets.tutorial*/,org.openl.rules.examples*/,org.openl.tablets.deploy*/</includes>
              <artifactItems>
                <artifactItem>
                  <groupId>org.openl.rules</groupId>
                  <artifactId>org.openl.rules.tutorials</artifactId>
                  <version>${project.version}</version>
                  <type>jar</type>
                  <outputDirectory>templates/</outputDirectory>
                </artifactItem>
              </artifactItems>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>

    <resources>
      <!--
      <resource>
        <directory>target/org.openl.rules.webstudio-template</directory>
        <targetPath>templates/org.openl.rules.webstudio</targetPath>
      </resource>
      -->

      <resource>
        <directory>.</directory>
        <includes>
          <include>plugin.xml</include>
          <include>icons/</include>
          <include>templates.build/</include>
          <include>templates/</include>
        </includes>
      </resource>

      <resource>
        <directory>src</directory>
        <includes>
          <include>**/*.properties</include>
          <include>**/*.xml</include>
        </includes>
      </resource>
    </resources>
  </build>

  <reporting>
     <plugins>
       <plugin>
         <groupId>org.codehaus.mojo</groupId>
         <artifactId>findbugs-maven-plugin</artifactId>
         <configuration>
            <timeout>6000000</timeout>
            <excludeFilterFile>${basedir}/findbugs-exclude.xml</excludeFilterFile>
         </configuration>
        </plugin>
      </plugins>
  </reporting> 

  <dependencies>
    <dependency>
      <groupId>org.openl</groupId>
      <artifactId>org.openl.eclipse.ui.wizard</artifactId>
    </dependency>

    <dependency>
      <groupId>org.eclipse.core</groupId>
      <artifactId>org.eclipse.core.resources</artifactId>
    </dependency>

    <dependency>
      <groupId>org.eclipse.equinox</groupId>
      <artifactId>org.eclipse.equinox.common</artifactId>
    </dependency>

    <dependency>
      <groupId>org.eclipse.ui</groupId>
      <artifactId>org.eclipse.ui.workbench</artifactId>
    </dependency>

    <dependency>
      <groupId>org.openl</groupId>
      <artifactId>org.openl.commons</artifactId>
    </dependency>

    <dependency>
      <groupId>org.eclipse.osgi</groupId>
      <artifactId>org.eclipse.osgi</artifactId>
    </dependency>
  </dependencies>

</project>