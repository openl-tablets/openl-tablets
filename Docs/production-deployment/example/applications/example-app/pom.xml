<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.example.applications</groupId>
        <artifactId>openl-example-applications-parent</artifactId>
        <version>0.1-SNAPSHOT</version>
    </parent>

    <artifactId>example-app</artifactId>
    <name>OpenL Example Application</name>
    <packaging>pom</packaging>

    <dependencies>
        <dependency>
            <groupId>com.example</groupId>
            <artifactId>example-simple</artifactId>
            <version>${project.version}</version>
            <type>zip</type>
        </dependency>
        <dependency>
            <groupId>com.example.dependencies</groupId>
            <artifactId>example-main</artifactId>
            <version>${project.version}</version>
            <classifier>deployment</classifier>
            <type>zip</type>
        </dependency>
        <dependency>
            <groupId>com.example</groupId>
            <artifactId>auth-extension</artifactId>
            <version>${project.version}</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>3.6.1</version>
                <executions>
                    <execution>
                        <id>copy-zip-dependencies</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <includeTypes>zip</includeTypes>
                            <includeClassifiers>deployment</includeClassifiers>
                            <outputDirectory>${project.build.directory}/zips</outputDirectory>
                            <stripVersion>true</stripVersion>
                            <stripClassifier>true</stripClassifier>
                        </configuration>
                    </execution>
                    <!--
                        Here example-simple is singled out because we don't want to copy here zip artefacts, which 
                        already have been copied as a part of deployment artifacts in previous step.
                        If you only use simple dependencies, remove <includeArtifactIds> tag from below.
                    -->
                    <execution>
                        <id>copy-simple-dependencies</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <includeTypes>zip</includeTypes>
                            <includeArtifactIds>example-simple</includeArtifactIds>
                            <outputDirectory>${project.build.directory}/zips</outputDirectory>
                            <stripVersion>true</stripVersion>
                            <stripClassifier>true</stripClassifier>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-libs</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <includeTypes>jar</includeTypes>
                            <outputDirectory>${project.build.directory}/lib</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
