<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd"
    default-autowire="no">

    <bean id="configManager" class="org.openl.rules.webstudio.ConfigManager">
        <constructor-arg name="useSystemProperties" value="true" />
        <constructor-arg name="propsLocation" value="${webstudio.home}/system-settings/system.properties" />
        <constructor-arg name="defaultPropsLocation" value="${webapp.root}/WEB-INF/conf/system.properties" />
    </bean>
    <bean id="systemConfig" class="java.util.HashMap">
        <constructor-arg value="#{configManager.properties}" />
    </bean>

</beans>
