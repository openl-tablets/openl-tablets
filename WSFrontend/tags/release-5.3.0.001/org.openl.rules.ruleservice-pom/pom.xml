<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.openl.rules</groupId>
    <artifactId>org.openl.rules.base-pom</artifactId>
    <version>5.3.0.001</version>
  </parent>

  <groupId>org.openl.rules</groupId>
  <artifactId>org.openl.rules.ruleservice-pom</artifactId>
  <packaging>pom</packaging>
  <version>5.3.0.001</version>
  <name>OpenL - RuleService</name>
  <description>Rules Service Pom Project</description>
  <url>http://openl-tablets.sourceforge.net/ws-toc401.shtml</url>


  <modules>
    <module>../org.openl.rules.ruleservice</module>
    <module>../org.openl.rules.ruleservice.ws</module>
    <module>../org.openl.rules.ruleservice.eclipse.feature</module>
    <module>../org.openl.rules.ruleservice.lib</module>
    <module>../org.openl.rules.ruleservice.lib.eclipse.feature</module>
  </modules>

  <scm>
    <connection>scm:svn:https://svn-rix.exigengroup.lv/svn/EPB/EPB/DecisionServices/OpenL/WSFrontend/tags/release-5.3.0.001</connection>

<developerConnection>scm:svn:https://svn-rix.exigengroup.lv/svn/EPB/EPB/DecisionServices/OpenL/WSFrontend/tags/release-5.3.0.001</developerConnection>

  </scm>

  <repositories>
    <repository>
      <id>local</id>
      <url>file://${basedir}/../org.openl.rules.ruleservice-pom/m2_repo</url>
    </repository>

    <repository>
      <id>apache-incubating</id>
      <url>http://people.apache.org/repo/m2-incubating-repository/</url>
    </repository>
  </repositories>

  <pluginRepositories>
    <pluginRepository>
      <id>local</id>
      <url>file://${basedir}/../org.openl.rules.ruleservice-pom/m2_repo</url>
    </pluginRepository>
  </pluginRepositories>

  <reporting>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-checkstyle-plugin</artifactId>
        <configuration>
          <configLocation>../org.openl.rules.ruleservice-pom/checkstyle.xml</configLocation>
        </configuration>
      </plugin>
    </plugins>
  </reporting>

  <profiles>
    <profile>
      <id>internal-deploy</id>
      <distributionManagement>
        <site>
          <id>internal-minsk</id>
          <url>file://d:/reports/org.openl.rules.ruleservice-pom</url>
        </site>
      </distributionManagement>
    </profile>

    <profile>
      <id>cobertura-summary-report</id>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-antrun-plugin</artifactId>
            <inherited>true</inherited>
            <configuration>
              <tasks>
                <taskdef resource="tasks.properties" />

                <cobertura-merge datafile="target\cobertura-merged-file.ser">
                  <fileset dir="..">
                    <include name="org.openl.rules.ruleservice\target\cobertura\cobertura.ser" />
                  </fileset>
                </cobertura-merge>

                <cobertura-report datafile="target\cobertura-merged-file.ser" destdir="target\site\cobertura-summary">
                  <fileset dir="..\org.openl.rules.ruleservice\src\">
                    <include name="**\*.java" />
                  </fileset>
                </cobertura-report>
              </tasks>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
    </dependency>
  </dependencies>

  <dependencyManagement>
    <dependencies>

      <dependency>
        <groupId>org.openl.rules</groupId>
        <artifactId>org.openl.rules.ruleservice</artifactId>
        <version>${version}</version>
      </dependency>

      <!-- DEV -->
      <dependency>
        <groupId>org.openl.rules</groupId>
        <artifactId>org.openl.rules</artifactId>
        <version>${openl.version.maven}</version>
      </dependency>

      <dependency>
        <groupId>org.openl</groupId>
        <artifactId>org.openl.core</artifactId>
        <version>${openl.version.maven}</version>
      </dependency>

      <dependency>
        <groupId>org.openl</groupId>
        <artifactId>org.openl.j</artifactId>
        <version>${openl.version.maven}</version>
      </dependency>
      
      <dependency>
        <groupId>org.openl</groupId>
        <artifactId>org.openl.conf.ant</artifactId>
        <version>${openl.version.maven}</version>
      </dependency>

      <!-- STUDIO -->
      <dependency>
        <groupId>org.openl.rules</groupId>
        <artifactId>org.openl.rules.repository</artifactId>
        <version>${openl.version.maven}</version>
      </dependency>

      <dependency>
        <groupId>org.openl.rules</groupId>
        <artifactId>org.openl.rules.repository.jcr</artifactId>
        <version>${openl.version.maven}</version>
      </dependency>
      
      <dependency>
        <groupId>org.openl.rules</groupId>
        <artifactId>org.openl.rules.repository.jcr.jackrabbit</artifactId>
        <version>${openl.version.maven}</version>
      </dependency>

      <dependency>
        <groupId>org.openl.rules</groupId>
        <artifactId>org.openl.rules.workspace</artifactId>
        <version>${openl.version.maven}</version>
      </dependency>

    </dependencies>
  </dependencyManagement>

</project>