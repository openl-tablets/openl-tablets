<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <import resource="classpath*:META-INF/spring/openl-ruleservice-logging-info-service-*.xml" />

    <!-- Bean for configure storages type via openl-ruleservice.properties file. -->
    <bean id="storeLoggingService" class="org.openl.rules.ruleservice.logging.StoreLoggingServiceFactoryBean" lazy-init="false">
        <property name="storeLoggingEnabled" value="${ruleservice.logging.store.enabled}"/>
    </bean> 
    
    <bean id="storeLoggingFeature" class="org.openl.rules.ruleservice.logging.StoreLoggingFeature" scope="prototype">
        <property name="storeLoggingEnabled" value="${ruleservice.logging.store.enabled}" />
        <property name="storeLoggingService" ref="storeLoggingService"/>
    </bean> 

   <bean class="org.openl.rules.ruleservice.logging.StoreLoggingsServiceInvocationAdviceListener" >
        <property name="storeLoggingEnabled" value="${ruleservice.logging.store.enabled}"/>
   </bean>
</beans>
