<project>
	<!--  Project identifier. String value which defines project uniquely. -->
	<id>first-hello</id>
	<!-- Project name. -->
	<name>first-hello</name>

	<!-- OpenL project includes one or more modules.  -->
	<modules>
		<module>
			<name>first_world</name>
			<type>API</type>
			<!-- 
				Rules root document. Usually excel file on file system. 
			-->
			<rules-root path="first_rules/First_World.xlsx"/>
		</module>	
		<module>
			<name>first_say_hello</name>
			<type>API</type>
			<!-- 
				Rules root document. Usually excel file on file system. 
			-->
			<rules-root path="first_rules/First_Hello.xlsx"/>
		</module>	
	</modules>
	
	<!-- Project's classpath. -->
	<classpath>
		<entry path="."/>
	</classpath>	
</project>