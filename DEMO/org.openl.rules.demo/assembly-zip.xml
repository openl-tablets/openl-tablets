<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <id>assembly-demo.zip</id>
    <includeBaseDirectory>false</includeBaseDirectory>

    <formats>
        <format>zip</format>
    </formats>

    <fileSets>
        <fileSet>
            <directory>ROOT</directory>
            <outputDirectory>${tomcat.webapps}/ROOT</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>apache-tomcat-conf</directory>
            <outputDirectory>${tomcat.root}</outputDirectory>
            <includes>
                <include>*.sh</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>apache-tomcat-conf</directory>
            <outputDirectory>${tomcat.root}</outputDirectory>
            <excludes>
                <exclude>*.sh</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>data</directory>
            <outputDirectory>${tomcat.root}</outputDirectory>
            <excludes>
                <exclude>openl-demo/repositories/design/.git-rename/</exclude>
            </excludes>
        </fileSet>
        <!-- .git folder is ignored by VCS and by maven-assembly-plugin. -->
        <fileSet>
            <directory>data/openl-demo/repositories/design/.git-rename</directory>
            <outputDirectory>${tomcat.root}/openl-demo/repositories/design/.git</outputDirectory>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>org.apache.tomcat:tomcat</include>
            </includes>
            <unpack>true</unpack>
            <unpackOptions>
                <excludes>
                    <exclude>**/webapps/**/*</exclude>
                    <exclude>**/conf/server.xml</exclude>
                </excludes>
            </unpackOptions>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
        <dependencySet>
            <outputDirectory>${tomcat.webapps}</outputDirectory>
            <includes>
                <include>org.openl.rules:org.openl.rules.webstudio</include>
            </includes>
            <outputFileNameMapping>webstudio.war</outputFileNameMapping>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
        <dependencySet>
            <outputDirectory>${tomcat.webapps}</outputDirectory>
            <includes>
                <include>org.openl.rules:org.openl.rules.ruleservice.ws</include>
            </includes>
            <outputFileNameMapping>webservice.war</outputFileNameMapping>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
        <dependencySet>
            <outputDirectory>${tomcat.lib}</outputDirectory>
            <includes>
                <include>com.h2database:h2</include>
            </includes>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
    </dependencySets>
</assembly>
