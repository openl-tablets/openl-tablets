<project>
    <!--
         Project identifier. String value which defines project uniquely.
     -->
    <id>openl-simple-project</id>

    <!--
         Project name.
     -->
    <name>OpenL Rules Simple Project</name>

    <!--
         OpenL project includes one or more modules.
     -->
    <modules>

        <module>
            <name>Template Rules</name>
            <type>static</type>
            <classname>gen.template.TemplateJavaWrapper</classname>

            <!--
                Rules root document. Usually excel file on file system.
            -->
            <rules-root path="src/main/resources/rules/TemplateRules.xls"/>

        </module>

    </modules>

    <!-- Project's classpath. -->
    <classpath>
        <entry path="target/classes"/>
    </classpath>

</project>