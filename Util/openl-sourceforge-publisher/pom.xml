<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.openl.rules</groupId>
    <artifactId>openl-sourceforge-publisher</artifactId>
    <packaging>pom</packaging>
    <version>5.13.4-SNAPSHOT</version>
    <name>OpenL - Util - OpenL Sourceforge Publisher</name>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-deploy-plugin</artifactId>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
        </plugins>
        <extensions>
            <extension>
                <groupId>org.apache.maven.wagon</groupId>
                <artifactId>wagon-ssh-external</artifactId>
                <version>1.0</version>
            </extension>
            <extension>
                <groupId>org.apache.maven.wagon</groupId>
                <artifactId>wagon-ssh</artifactId>
                <version>1.0</version>
            </extension>
        </extensions>
    </build>

    <profiles>
        <profile>
            <id>publish-to-sourceforge</id>
            <properties>
                <sourceforge.url>sftp://frs.sourceforge.net:/home/frs/project/openl-tablets/openl-tablets</sourceforge.url>
                <sourceforge.folder>OpenL Tablets ${project.version}</sourceforge.folder>
            </properties>

            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>wagon-maven-plugin</artifactId>
                        <version>1.0-beta-5</version>
                        <configuration>
                            <serverId>sourceforge</serverId>
                            <url>${sourceforge.url}</url>
                        </configuration>
                        <executions>
                            <execution>
                                <goals>
                                    <goal>upload-single</goal>
                                </goals>
                                <phase>install</phase>
                                <id>file1</id>
                                <configuration>
                                    <fromFile>
                                        ../../DEV/org.openl.rules/target/openl-tablets-core-${project.version}.zip
                                    </fromFile>
                                    <toFile>${sourceforge.folder}/openl-tablets-core-${project.version}.zip</toFile>
                                </configuration>
                            </execution>
                            <execution>
                                <goals>
                                    <goal>upload-single</goal>
                                </goals>
                                <phase>install</phase>
                                <id>file2</id>
                                <configuration>
                                    <fromFile>
                                        ../../STUDIO/org.openl.rules.webstudio/target/openl-tablets-webstudio-${project.version}.war
                                    </fromFile>
                                    <toFile>${sourceforge.folder}/openl-tablets-webstudio-${project.version}.war
                                    </toFile>
                                </configuration>
                            </execution>
                            <execution>
                                <goals>
                                    <goal>upload-single</goal>
                                </goals>
                                <phase>install</phase>
                                <id>file3</id>
                                <configuration>
                                    <fromFile>
                                        ../../WSFrontend/org.openl.rules.ruleservice.ws/target/openl-tablets-ws-${project.version}.war
                                    </fromFile>
                                    <toFile>${sourceforge.folder}/openl-tablets-ws-${project.version}.war</toFile>
                                </configuration>
                            </execution>
                            <execution>
                                <goals>
                                    <goal>upload-single</goal>
                                </goals>
                                <phase>install</phase>
                                <id>file4</id>
                                <configuration>
                                    <fromFile>
                                        ../../DEMO/org.openl.rules.demo.repository/target/openl-tablets-remote-repository-${project.version}.zip
                                    </fromFile>
                                    <toFile>
                                        ${sourceforge.folder}/openl-tablets-remote-repository-${project.version}.zip
                                    </toFile>
                                </configuration>
                            </execution>
                            <execution>
                                <goals>
                                    <goal>upload-single</goal>
                                </goals>
                                <phase>install</phase>
                                <id>file5</id>
                                <configuration>
                                    <fromFile>
                                        ../../DEMO/org.openl.rules.demo/target/openl-tablets-demo-${project.version}.zip
                                    </fromFile>
                                    <toFile>${sourceforge.folder}/openl-tablets-demo-${project.version}.zip</toFile>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>

        </profile>
    </profiles>

</project>