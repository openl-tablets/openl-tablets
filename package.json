{
  "name": "openl-tablets",
  "version": "6.0.0",
  "private": true,
  "description": "OpenL Tablets Business Rules Management System",
  "scripts": {
    "dx": "npm run infra:up && echo 'Waiting for databases to start...' && sleep 10 && npm run dev:studio",
    "dev:studio": "mvn -pl STUDIO/org.openl.rules.webstudio spring-boot:run",
    "dev:ws": "mvn -pl WSFrontend/org.openl.rules.ruleservice.ws spring-boot:run",
    "dev:ui": "cd STUDIO/studio-ui && npm run dev",
    "build": "mvn clean install",
    "build:quick": "mvn clean install -Dquick -DnoPerf -T1C",
    "build:no-tests": "mvn clean install -DskipTests",
    "build:ui": "cd STUDIO/studio-ui && npm run build",
    "test": "mvn test",
    "test:integration": "mvn verify -DskipTests=false",
    "test:unit": "mvn test -DskipTests=false",
    "test:ui": "cd STUDIO/studio-ui && npm test",
    "lint": "mvn checkstyle:check",
    "format": "mvn spotless:apply",
    "format:check": "mvn spotless:check",
    "infra:up": "docker compose -f docker-compose.dev.yml up -d",
    "infra:down": "docker compose -f docker-compose.dev.yml down",
    "infra:restart": "npm run infra:down && npm run infra:up",
    "infra:logs": "docker compose -f docker-compose.dev.yml logs -f",
    "infra:ps": "docker compose -f docker-compose.dev.yml ps",
    "clean": "mvn clean && npm run infra:down",
    "clean:all": "mvn clean && npm run infra:down -- -v && rm -rf STUDIO/studio-ui/node_modules",
    "docker:build": "docker build -t openl-tablets:dev .",
    "docker:run": "docker run -p 8080:8080 openl-tablets:dev",
    "docker:build:studio": "docker build -f STUDIO/Dockerfile -t openl-webstudio:dev STUDIO",
    "docker:build:ws": "docker build -f WSFrontend/Dockerfile -t openl-ruleservice:dev WSFrontend",
    "demo": "docker compose up",
    "prepare": "command -v husky >/dev/null 2>&1 && husky install || echo 'Husky not installed, skipping git hooks'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/openl-tablets/openl-tablets.git"
  },
  "keywords": [
    "business-rules",
    "brms",
    "decision-engine",
    "rules-engine",
    "excel",
    "java"
  ],
  "author": "OpenL Tablets",
  "license": "LGPL-2.1",
  "bugs": {
    "url": "https://github.com/openl-tablets/openl-tablets/issues"
  },
  "homepage": "https://openl-tablets.org",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "husky": "^9.0.11"
  }
}
